{
    "name": "order_tracking",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.22",
        "@fortawesome/free-solid-svg-icons": "^5.10.2",
        "@fortawesome/react-fontawesome": "^0.1.4",
        "bootstrap": "^4.3.1",
        "express": "^4.15.2",
        "jquery": "^3.4.1",
        "node-sass-chokidar": "^1.3.5",
        "npm-run-all": "^4.1.5",
        "react": "^16.9.0",
        "react-bootstrap": "^1.0.0-beta.12",
        "react-dom": "^16.9.0",
        "react-redux": "^7.1.1",
        "react-scripts": "3.1.1",
        "redux": "^4.0.4",
        "save": "^2.4.0",
        "socket.io": "^2.4.0",
        "underscore": "^1.9.1"
    },
    "scripts": {
        "start": "npm-run-all -p watch-css start-js start_server",
        "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive --skip-initial",
        "build-css": "node-sass-chokidar src/ -o src/",
        "start-js": "react-scripts start",
        "build": "react-scripts build",
        "start_server": "node index.js",
        "start_server_mon": "nodemon index.js",
        "test-react": "react-scripts test --env=jsdom",
        "test": "jest",
        "test:watch": "npm test -- --watch"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "babel-jest": "^24.9.0",
        "babel-plugin-transform-require-context": "^0.1.1",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.14.0",
        "enzyme-to-json": "^3.4.0",
        "react-socket-io": "^0.2.5",
        "react-test-renderer": "^16.8.6",
        "redux-devtools-extension": "^2.13.8",
        "redux-mock-store": "^1.5.3"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": []
    },
    "jest": {
        "testEnvironment": "node",
        "setupFiles": [
            "<rootDir>/setupTests.js"
        ],
        "moduleNameMapper": {
            "^.+\\.(css|less|svg|png|gif|scss)$": "<rootDir>/stub.js"
        },
        "testPathIgnorePatterns": [
            "/node_modules/"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "verbose": true,
        "modulePathIgnorePatterns": [],
        "unmockedModulePathPatterns": []
    }
}
